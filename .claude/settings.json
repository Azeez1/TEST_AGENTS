{
  "workspace": {
    "name": "TEST_AGENTS Root",
    "description": "Root-level supervisor workspace for cross-team quality assurance",
    "allowed_tools": [
      "bash",
      "read",
      "write",
      "edit",
      "glob",
      "grep",
      "task"
    ]
  },
  "skills": {
    "path": ".claude/skills",
    "description": "Shared skills available workspace-wide. Agents must explicitly declare skills in their definitions to use them.",
    "algorithmic-art": {
      "enabled": true
    },
    "artifacts-builder": {
      "enabled": true
    },
    "brand-guidelines": {
      "enabled": true
    },
    "canvas-design": {
      "enabled": true
    },
    "internal-comms": {
      "enabled": true
    },
    "mcp-builder": {
      "enabled": true
    },
    "skill-creator": {
      "enabled": true
    },
    "slack-gif-creator": {
      "enabled": true
    },
    "theme-factory": {
      "enabled": true
    },
    "filesystem": {
      "enabled": true,
      "userConfig": {
        "allowed_directories": [
          "C:\\",
          "C:\\Users"
        ]
      }
    },
    "figma": {
      "enabled": true
    },
    "flow-diagram": {
      "enabled": true
    },
    "pdf-filler": {
      "enabled": true
    },
    "pdf": {
      "enabled": true,
      "comment": "pypdf-based PDF creation - comprehensive features, offline capable"
    },
    "pptx": {
      "enabled": true,
      "comment": "html2pptx PowerPoint generation - no MCP alternative"
    },
    "docx": {
      "enabled": true,
      "comment": "Local Word document creation - use when offline or advanced features needed. Google Docs MCP is primary for cloud collaboration."
    },
    "xlsx": {
      "enabled": true,
      "comment": "Local Excel spreadsheet creation - use when offline or advanced features needed. Google Sheets MCP is primary for cloud collaboration."
    },
    "context7": {
      "enabled": true
    }
  },
  "mcp": {
    "servers": {
      "supervisor-tools": {
        "command": "python3",
        "args": [
          "/home/user/TEST_AGENTS/.claude/tools/supervisor_mcp_server.py"
        ],
        "description": "Supervisor verification and quality assurance tools"
      }
    }
  },
  "agents": {
    "supervisor": {
      "description": "Root-level quality assurance supervisor",
      "capabilities": [
        "Cross-team task verification",
        "Quality assurance validation",
        "Deliverable inspection",
        "Test execution verification",
        "Code quality checks",
        "Documentation validation",
        "Comprehensive reporting"
      ]
    }
  }
}
